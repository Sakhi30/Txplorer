  "compilerOptions": {
    "outDir": "dist",
    "sourceMap": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "module": "esnext",
    "target": "es6",
    "lib": ["es6", "dom", "es2016", "es2017"],
    "moduleResolution": "node",

    "jsx": "react"
  },
  "exclude": [
    "examples",
    "./node_modules/react",
    "/node_modules/react-dom",
    "node_modules",
  ]
}